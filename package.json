{
  "name": "ai-workflow",
  "version": "0.1.0",
  "description": "AI Workflow Orchestration Tool - Orchestrates AI assistants within structured workflows",
  "main": "dist/index.js",
  "bin": {
    "workflow": "./dist/cli.js"
  },
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "format:diff": "prettier --check src/**/*.ts || (echo 'Run: npm run format' && exit 1)",
    "type-check": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atniptw/stunning-octo-lamp.git"
  },
  "keywords": [
    "ai",
    "workflow",
    "automation",
    "cli",
    "development"
  ],
  "author": "",
  "license": "MIT",
  "type": "module",
  "bugs": {
    "url": "https://github.com/atniptw/stunning-octo-lamp/issues"
  },
  "homepage": "https://github.com/atniptw/stunning-octo-lamp#readme",
  "dependencies": {
    "@inquirer/prompts": "^7.8.0",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@octokit/auth-app": "^7.1.3",
    "@octokit/rest": "^22.0.0",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "dotenv": "^17.2.1",
    "ora": "^8.2.0"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.32.0",
    "prettier": "^3.3.3",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "coverageThresholds": {
    "statements": 80,
    "branches": 80,
    "functions": 80,
    "lines": 80
  }
}
